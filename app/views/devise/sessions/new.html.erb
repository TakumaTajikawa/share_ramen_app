<% provide(:title, "ログイン") %>

<div id="container">
  <div class="user-container">
    <h3 class="page-title page-title-users">ログイン
      <hr>
    </h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name))do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "entry-field", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "entry-field", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "entry-btn" %>
      </div>
    <% end %>

    <hr class="hr1">

    <%= render "devise/shared/links" %>
  </div>
</div>
