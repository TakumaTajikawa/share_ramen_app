<% provide(:title, "ログイン") %>
<h2 class="page-title">ログイン</h2>

<div class="user-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name))do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "entry-field", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "entry-field", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "entry-btn" %>
    </div>
  <% end %>

  <hr>

  <%= render "devise/shared/links" %>
</div>
