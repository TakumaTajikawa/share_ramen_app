<header class="fixed-top">
  <nav class="navbar navbar-expand-lg">
    <%= link_to(image_tag("logo.png", :alt => "アプリのロゴ", width: "35%", height: "auto"), root_path, class: "navbar-brand") %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= image_tag "ramen-icon.jpg", alt: "post-icon", size: "20", class: "fas post-icon" %>   
            <%= link_to "投稿を作成", new_post_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <i class="fas fa-user"></i>      
            <%= link_to "マイページ", user_path(current_user.id), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <i class="fas fa-users"></i>     
            <%= link_to "ユーザー一覧", users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <% if unchecked_notifications.any? %>
              <i class="fa fa-circle" style="color: gold;"></i>
            <% end %>
            <i class="fas fa-bell"></i>     
            <%= link_to "通知", notifications_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <i class="fas fa-sign-out-alt"></i>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <i class="fas fa-sign-in-alt"></i>
            <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <i class="fas fa-user-plus"></i>
            <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>