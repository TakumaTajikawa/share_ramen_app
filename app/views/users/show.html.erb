<% provide(:title, "マイページ") %>
<div class="user-container">
  <h3 class="page-title">マイページ</h3>
  <h4 class="show-user-name">
    <%= @user.name %>
  </h4>
  <% if current_user == @user %>
    <div class="account-edit">
      <%= link_to "プロフィール編集", edit_user_path(@user), class: "user-edit-btn" %>
    </div>
  <% end %>
</div>